<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JaunDetect</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @using JaunDetect.Extensions
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top justify-content-center">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#layoutNavBar" aria-controls="layoutNavBar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-md-center" id="layoutNavBar">

            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Content/Images/logo.png" alt="Logo" style="height:45px;" /></a>

            <ul class="navbar-nav">
                <li class="nav-item mx-3 @Html.IsActive("Home", "Index")">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li class="nav-item mx-3 @Html.IsActive("Home", "UsageData")">
                    <a class="nav-link" href="@Url.Action("UsageData", "Home")">Usage Data</a>
                </li>
                <li class="nav-item mx-3 @Html.IsActive("Home", "Resources")">
                    <a class="nav-link" href="@Url.Action("Resources", "Home")">Resources</a>
                </li>
                <li class="nav-item mx-3 @Html.IsActive("Home", "CrashReport")">
                    <a class="nav-link" href="@Url.Action("CrashReport", "Home")">Crash Report</a>
                </li>
                <li class="nav-item mx-3 @Html.IsActive("Home", "Photos")">
                    <a class="nav-link" href="@Url.Action("Photos", "Home")">Photos</a>
                </li>
                <li class="nav-item mx-3 @Html.IsActive("Home", "CustomQuery")">
                    <a class="nav-link" href="@Url.Action("CustomQuery", "Home")">Custom Query</a>
                </li>
                <li class="nav-item mx-3 @Html.IsActive("Home", "Settings")">
                    <a class="nav-link" href="@Url.Action("Settings", "Home")">Settings</a>
                </li>
            </ul>
        </div>
    </nav>
  
    <div class="no-gutters">
        @RenderBody()
        <hr />
        <footer class="container">
            <p>&copy; @DateTime.Now.Year - JaunDetect</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<!--Script to set Viewbag.Section as the anchor tag for page to return to when it refreshes-->
<script type="text/javascript">
    $(document).ready(function () {
        var anchor = document.getElementById('@ViewBag.Section');
        anchor.scrollIntoView(true);
    });
</script>