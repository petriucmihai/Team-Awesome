    <script>
        // Photos taken over time Chart
        $.ajax({
        type: "POST",
        url: "/Home/GetPhotosTakenByTimeChart",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (chData) {
            var aData = chData;
            var aLabels = aData[0];
            var aDatasets1 = aData[1];
            var dataT = {
                labels: aLabels,
                datasets: [{
                    label: "Downloads",
                    data: aDatasets1,
                    fill: true,
                    lineTension: 0.1,
                    borderColor: "#FF2C14",
                    backgroundColor: "rgba(255, 80, 0, .4)",
                    pointBackgroundColor: "#FFBD19",
                    pointBorderColor: "#FFBD19",
                    pointHoverBackgroundColor: "#FFBD19",
                    pointHoverBorderColor: "#FFBD19",
                    borderWidth: 3
                }]
            };
            var ctx = $("#PhotosTakenTime").get(0).getContext("2d");

            //Chart.defaults.global.defaultFontColor = 'white';

            var myNewChart = new Chart(ctx, {
                type: 'line',
                data: dataT,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    title: { display: false, text: 'CHART.JS DEMO CHART' },
                    legend: { display: false, position: 'bottom' },
                    scales: {
                        xAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: true, labelString: '', } }],
                        yAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' }, ticks: { beginAtZero: true, fontSize: 13 } }]
                    },
                }
            });
        }
        });

        // Successful vs failed photos chart
        $.ajax({
        type: "POST",
        url: "/Home/GetSuccessfulFailedPhotosTaken",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (chData) {
            var aData = chData;
            var aLabels = aData[0];
            var dataT = {
                labels: aLabels,
                datasets: [{
                    label: "Successful Photos",
                    data: aData[1],
                    fill: false,
                    lineTension: .3,
                    borderColor: "#FA2C4B",
                    backgroundColor: "#D02C87",
                    pointBackgroundColor: "#B02CA7",
                    pointBorderColor: "#B02CA7",
                    pointHoverBackgroundColor: "#B02CA7",
                    pointHoverBorderColor: "#B02CA7",
                    borderWidth: 2
                },
                {
                    label: "Failed Photos",
                    data: aData[2],
                    fill: false,
                    lineTension: .3,
                    borderColor: "#FFD819",
                    backgroundColor: "#FFD819",
                    pointBackgroundColor: "#FF8800",
                    pointBorderColor: "#FF8800",
                    pointHoverBackgroundColor: "#FF8800",
                    pointHoverBorderColor: "#FF8800",
                    borderWidth: 2
                }]
            };
            var ctx = $("#SuccessfulFailedPhotos").get(0).getContext("2d");
            var myNewChart = new Chart(ctx, {
                type: 'line',
                data: dataT,
                options: {
                    responsive: true,
                    title: { display: false, text: 'CHART.JS DEMO CHART' },
                    legend: {
                        display: true, position: 'bottom', labels: { fontSize: 18 }
                    },
                    scales: {
                        xAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: true, labelString: '' }, ticks: { fontSize: 18 } }],
                        yAxes: [{ gridLines: { display: false }, display: true, scaleLabel: { display: false, labelString: '' }, ticks: { beginAtZero: true, fontSize: 15 } }]
                    },
                }
            });
        }
