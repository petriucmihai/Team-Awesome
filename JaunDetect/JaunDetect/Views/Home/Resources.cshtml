@using JaunDetect.Models;
@model ResourcesChartModel

<div class="row">
    <div class="col text-center">
        <div class="col-md-5 p-1 mx-auto my-3">
            <h2 class="display-6 font-weight-normal">Resources</h2>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            
            <div class="row">
                <img src="/Home/GetTestStripUsageChart" />
            </div>

            <div class="row">

            </div>
            



        </div>

        <div class="col">
            <img src="/Home/GetHospitalPatientChart" />
        </div>
        <div class="row">
            <div>
                <p>Current price of test strip:</p>
                @using (Html.BeginForm("UpdatePrice", "Home", FormMethod.Post))
                {
                    @Html.TextBoxFor(model => model.TestStripPrice)
                    <button type="submit">Update</button>
                }
            </div>
            <br />
            <div class="border border-dark rounded">
                <table>
                    <thead>
                        <tr>
                            <th scope="col">Clinic</th>
                            <th scope="col">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Clinics.Count() == Model.TestStripCosts.Count())
                            {
                                for (int i = 0; i < Model.Clinics.Count(); i++)
                                {
                                    <tr>
                                        <td>@Model.Clinics[i]</td>
                                        <td>$@Model.TestStripCosts[i]</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
