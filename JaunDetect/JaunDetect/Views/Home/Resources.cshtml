@using JaunDetect.Models;
@model ResourcesViewModel

@{
    ViewBag.Title = "Resources";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class=" container">
    <div class="row">
        <div class="col-6">
            <img src="/Home/GetTestStripUsageChart" />
        </div>

        <div class="col-6">
            <img src="/Home/GetHospitalPatientChart" />
        </div>
        <div class="row">
            <div>
                <p>Current price of test strip:</p>
                <input type="text" />
            </div>
            <br />
            <div class="border border-dark rounded">
                <table>
                    <thead>
                        <tr>
                            <th scope="col">Clinic</th>
                            <th scope="col">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Clinics.Count() == Model.TestStripUsages.Count())
                            {
                                for (int i = 0; i < Model.Clinics.Count(); i++)
                                {
                                    <tr>
                                        <td>@Model.Clinics[i]</td>
                                        <td>@Model.TestStripUsages[i]</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>   

</div>
