@using JaunDetect.Models;
@model HomeChartModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome To JaunDetect</h1>
    <p class="lead">JaunDetect: A Telemetry Solution for a Low-Cost Jaundice Prevention Application</p>
    <p>Team Awesome: Mihai, Laura, and Onur</p>
</div>

<div class="row">
    <div class="col-4">
        <img src="~/Content/Images/heatmap.jpg" class="img-fluid" alt="Responsive image" />
    </div>

    <div class="col-8">
        @using (Html.BeginForm("UpdateHomeChartTimeOption", "Home", FormMethod.Post))
        {
            @Html.DropDownListFor(model => model.TimeOptionString, Model.OptionsList);
            <button type="submit">Update</button>
        }
        <img src="/Home/GetBilirubinLevelChart" />
    </div>
</div>
